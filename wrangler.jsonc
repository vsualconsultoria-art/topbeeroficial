{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "topbeer",
  "compatibility_date": "2026-01-14",
  "pages_build_output_dir": "./dist",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "topbeer-production",
      "database_id": "local"
    }
  ],
  "r2_buckets": [
    {
      "binding": "R2",
      "bucket_name": "topbeer-images"
    }
  ]
}